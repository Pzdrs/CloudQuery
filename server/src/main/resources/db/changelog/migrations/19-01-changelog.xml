<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1745059070632-1" author="Petr">
        <createSequence incrementBy="50" sequenceName="measurement_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1745059070632-2" author="Petr">
        <createTable tableName="measurement">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_measurement"/>
            </column>
            <column name="place_id" type="INT"/>
            <column name="timestamp" type="DATETIME"/>
            <column name="temperature" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="feels_like" type="DOUBLE"/>
            <column name="min_temperature" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="max_temperature" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="pressure_sea_level" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="pressure_ground_level" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="humidity" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745059070632-3" author="Petr">
        <createTable tableName="place">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_place"/>
            </column>
            <column name="city_name" type="VARCHAR(255)"/>
            <column name="country_code" type="VARCHAR(255)"/>
            <column name="zone_offset" type="VARCHAR(6)"/>
            <column name="latitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745059070632-4" author="Petr">
        <addForeignKeyConstraint baseColumnNames="place_id" baseTableName="measurement"
                                 constraintName="FK_MEASUREMENT_ON_PLACE" referencedColumnNames="id"
                                 referencedTableName="place"/>
    </changeSet>

</databaseChangeLog>